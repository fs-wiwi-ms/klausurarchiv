html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="description" content="")
    meta(name="author" content="")

    title = "Hello Klausurarchiv!"
    link(rel="stylesheet" href="#{static_path(@conn, "/css/app.css")}")

  body
    nav.navbar.has-shadow.is-spaced.has-background-link role="navigation" aria-label="main navigation"
      div.navbar-brand
        a.navbar-item(href="#{page_path(@conn, :index)}")
          img.image(src="#{static_path(@conn, "/images/Logo Fachschaft_Vektor.svg")}" alt="Klausurarchiv der Fachschaft WiWI MÃ¼nster")

        a.navbar-burger role="button" aria-label="menu" aria-expanded="false"
          span aria-hidden="true"
          span aria-hidden="true"
          span aria-hidden="true"

    div.container
      = if !is_nil get_flash(@conn, :info) do
        section.section
          article.message.is-success
            div.message-header
              p Success
            div.message-body
              p = "#{get_flash(@conn, :info) }"

      = if !is_nil get_flash(@conn, :error) do
        section.section
          article.message.is-danger
            div.message-header
              p Error
            div.message-body
              p = "#{get_flash(@conn, :error) }"

      section.section
        = render @view_module, @view_template, assigns

    script(src="#{static_path(@conn, "/js/app.js")}")

